<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="nz.co.redice.demoservice.view.SplashFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/fromSplashScreenToAutoLocation"
            app:destination="@id/autoLocationFragment" />
        <action
            android:id="@+id/fromSplashScreenToHome"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/autoLocationFragment"
        android:name="nz.co.redice.demoservice.view.AutoLocationFragment"
        android:label="fragment_auto_location"
        tools:layout="@layout/fragment_auto_location">
        <action
            android:id="@+id/action_autoLocationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="nz.co.redice.demoservice.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="nz.co.redice.demoservice.view.SettingsFragment"
        android:label="SettingsFragment">
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>